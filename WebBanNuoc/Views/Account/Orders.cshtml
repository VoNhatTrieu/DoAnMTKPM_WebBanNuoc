@{
    ViewBag.Title = "Lịch sử đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fa fa-list-alt me-2"></i>Lịch sử đơn hàng
            </h2>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    <i class="fa fa-exclamation-circle me-2"></i>@ViewBag.Error
                </div>
            }

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info">
                    <i class="fa fa-info-circle me-2"></i>@ViewBag.Message
                </div>
            }

            @{
                var orders = ViewBag.Orders as System.Collections.IEnumerable;
                var hasOrders = orders != null && orders.Cast<object>().Any();
            }

            @if (hasOrders)
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Mã đơn hàng</th>
                                <th>Ngày đặt</th>
                                <th>Trạng thái</th>
                                <th>Thanh toán</th>
                                <th>Tổng tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in ViewBag.Orders)
                            {
                                <tr>
                                    <td class="fw-bold">@order.OrderNumber</td>
                                    <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (order.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                                        }
                                        else if (order.Status == "Confirmed")
                                        {
                                            <span class="badge bg-info">Đã xác nhận</span>
                                        }
                                        else if (order.Status == "Preparing")
                                        {
                                            <span class="badge bg-primary">Đang pha chế</span>
                                        }
                                        else if (order.Status == "Shipping")
                                        {
                                            <span class="badge bg-primary">Đang giao</span>
                                        }
                                        else if (order.Status == "Delivered")
                                        {
                                            <span class="badge bg-success">Đã giao</span>
                                        }
                                        else if (order.Status == "Cancelled")
                                        {
                                            <span class="badge bg-danger">Đã hủy</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@order.Status</span>
                                        }
                                    </td>
                                    <td>@order.PaymentMethod</td>
                                    <td class="fw-bold text-danger">@order.Total.ToString("N0")đ</td>
                                    <td>
                                        <a href="@Url.Action("OrderDetail", "Orders", new { id = order.Id })" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fa fa-eye me-1"></i>Chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fa fa-shopping-bag fa-4x text-muted mb-3"></i>
                    <h4>Bạn chưa có đơn hàng nào</h4>
                    <p class="text-muted">Hãy đặt hàng ngay để thưởng thức những thức uống tuyệt vời!</p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
                        <i class="fa fa-shopping-cart me-2"></i>Đặt hàng ngay
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
    
    .badge {
        padding: 0.5rem 0.8rem;
        font-size: 0.85rem;
    }
</style>
