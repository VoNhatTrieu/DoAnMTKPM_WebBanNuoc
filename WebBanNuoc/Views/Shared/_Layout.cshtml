<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sip & Savor</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/TrangChu.css" >
          @Styles.Render("~/Content/css")
          @RenderSection("styles", required: false)
</head>

<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light sticky-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="fa fa-mug-hot"></i> Sip & Savor
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Home")">
                            <i class="fa fa-home"></i> Trang chủ
                        </a>
                    </li>

                    <!-- MENU DROPDOWN -->
                    @Html.Action("CategoryMenu", "Menu")

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About", "Home")">
                            <i class="fa fa-info-circle"></i> Giới thiệu
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">
                            <i class="fa fa-envelope"></i> Liên hệ
                        </a>
                    </li>
                </ul>
                <form class="d-flex search-form me-3"
                      action="@Url.Action("Search", "Products")"
                      method="get">
                    <input class="form-control search-input"
                           type="search"
                           name="keyword"
                           placeholder="Tìm đồ uống..."
                           aria-label="Search">
                    <button class="btn search-btn" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </form>


                <div class="d-flex align-items-center">
                    <!-- GIỎ HÀNG -->
                    <a href="@Url.Action("Index", "Cart")"
                       class="btn btn-link position-relative me-3 text-dark">
                        <i class="fa fa-shopping-cart fs-5"></i>
                        <span class="cart-badge" id="cartCount">0</span>
                    </a>


                    <!-- ĐĂNG NHẬP / TÀI KHOẢN -->
                    <div class="dropdown">
                        @if (Session["UserId"] != null)
                        {
                            <!-- Đã đăng nhập -->
                            <button class="user-menu-btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fa fa-user-circle"></i> @Session["UserName"]
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <div class="dropdown-item-text">
                                        <div class="fw-bold">@Session["UserName"]</div>
                                        <small class="text-muted">@Session["UserEmail"]</small>
                                    </div>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")"><i class="fa fa-user me-2"></i> Thông tin tài khoản</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Orders", "Account")"><i class="fa fa-list-alt me-2"></i> Lịch sử đơn hàng</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")"><i class="fa fa-sign-out-alt me-2"></i> Đăng xuất</a></li>
                            </ul>
                        }
                        else
                        {
                            <!-- Chưa đăng nhập -->
                            <button class="user-menu-btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fa fa-user"></i> Tài khoản
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="@Url.Action("Login", "Account")"><i class="fa fa-sign-in-alt me-2"></i> Đăng nhập</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Register", "Account")"><i class="fa fa-user-plus me-2"></i> Đăng ký</a></li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main>
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="fw-bold mb-3">
                        <i class="fa fa-mug-hot text-warning me-2"></i>Sip & Savor
                    </h5>
                    <p class="text-muted">
                        Hệ thống thương mại điện tử bán đồ uống & combo cá nhân hóa.
                        Mang đến trải nghiệm tuyệt vời với đồ uống chất lượng cao.
                    </p>
                    <div class="mt-3">
                        <a href="#" class="btn btn-sm btn-outline-secondary me-2"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="btn btn-sm btn-outline-secondary me-2"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="btn btn-sm btn-outline-secondary me-2"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="btn btn-sm btn-outline-secondary"><i class="fab fa-tiktok"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="fw-bold mb-3">Khám phá</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Products")">Thực đơn</a></li>
                        <li class="mb-2"><a href="@Url.Action("Products", "Home", new { sort = "bestseller" })">Bán chạy</a></li>
                        <li class="mb-2"><a href="@Url.Action("Products", "Home", new { sort = "new" })">Món mới</a></li>
                        <li class="mb-2"><a href="@Url.Action("Promotions", "Home")">Khuyến mãi</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="fw-bold mb-3">Hỗ trợ</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Delivery", "Home")">Giao hàng</a></li>
                        <li class="mb-2"><a href="@Url.Action("Return", "Home")">Chính sách đổi trả</a></li>
                        <li class="mb-2"><a href="@Url.Action("Guide", "Home")">Hướng dẫn</a></li>
                        <li class="mb-2"><a href="@Url.Action("FAQ", "Home")">Câu hỏi thường gặp</a></li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-6 mb-4 ">
                    <h6 class="fw-bold mb-3">Liên hệ</h6>
                    <p class="text-muted mb-2">
                        <i class="fa fa-map-marker-alt text-primary me-2"></i>
                        123 Nguyễn Huệ, Quận 1, TP.HCM
                    </p>
                    <p class="text-muted mb-2">
                        <i class="fa fa-phone text-success me-2"></i>
                        0123 456 789
                    </p>
                    <p class="text-muted mb-2">
                        <i class="fa fa-envelope text-danger me-2"></i>
                        hello@sipandsavor.vn
                    </p>
                    <p class="text-muted">
                        <i class="fa fa-clock text-warning me-2"></i>
                        Thứ 2 - CN: 8:00 - 22:00
                    </p>
                </div>
            </div>

            <hr class="my-4">

            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p class="text-muted mb-0">
                        © 2026 Sip & Savor. Bảo lưu mọi quyền.
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="#" class="text-muted me-3">Điều khoản</a>
                    <a href="#" class="text-muted me-3">Chính sách bảo mật</a>
                    <a href="#" class="text-muted">Cookies</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  
    @RenderSection("scripts", required: false)


    <script>
        // Cập nhật số lượng giỏ hàng
        function updateCartCount() {
            let cart = JSON.parse(localStorage.getItem('cart') || '[]');
            let totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
            document.getElementById('cartCount').textContent = totalItems;
        }

        // Load khi trang được tải
        document.addEventListener('DOMContentLoaded', function () {
            updateCartCount();
        });
    </script>
</body>
</html>
